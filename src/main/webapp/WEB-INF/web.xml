<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>CategoryController</servlet-name>
    <servlet-class>com.servlet_ordering_system.controllers.CategoryController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ProductController</servlet-name>
    <servlet-class>com.servlet_ordering_system.controllers.ProductController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserController</servlet-name>
    <servlet-class>com.servlet_ordering_system.controllers.UserController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AuthController</servlet-name>
    <servlet-class>com.servlet_ordering_system.controllers.AuthController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>OrderController</servlet-name>
    <servlet-class>com.servlet_ordering_system.controllers.OrderController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>CategoryController</servlet-name>
    <url-pattern>/categories/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ProductController</servlet-name>
    <url-pattern>/products/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserController</servlet-name>
    <url-pattern>/users/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AuthController</servlet-name>
    <url-pattern>/auth</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>OrderController</servlet-name>
    <url-pattern>/orders/*</url-pattern>
  </servlet-mapping>

  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
</web-app>
